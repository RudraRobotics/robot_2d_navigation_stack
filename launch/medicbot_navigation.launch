<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find medicbot_navigation)/maps/map.yaml"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="simulation" default="false"/>
  <arg name="depth" default="false"/>

  <group if="$(arg simulation)">
    <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"/>
  </group>

  <group unless="$(arg simulation)" >
	  <group if="$(arg depth)">
		  <include file="$(find medicbot_control)/launch/medicbot_diff_drive_controller.launch"/>
		  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
			  <param name="enable_pointcloud" value="true"/>
		  </include>
		  <include file="$(find medicbot_navigation)/launch/pointcloud_to_laserscan.launch"/>
		
	  </group>
	  <group unless="$(arg depth)">
		  <include file="$(find medicbot_control)/launch/medicbot_diff_drive_controller.launch"/>
		  <include file="$(find rplidar_ros)/launch/rplidar.launch"/>
		  <node pkg="usb_cam" type="usb_cam_node" name="usb_cam" output="log"/>
	  </group>
  </group>

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>
  <!-- AMCL -->
  <include file="$(find medicbot_navigation)/launch/amcl.launch"/>

  <!-- Robot localization ekf node -->
  <!--include file="$(find medicbot_localization)/launch/medicbot_ekf.launch"/-->

  <!-- move_base -->
  <include file="$(find medicbot_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg simulation)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find medicbot_navigation)/rviz/medicbot_navigation.rviz"/>
  </group>
</launch>

